<h1>New Post</h1>

<%= form_with(model: [@location, @post]) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :date %>
    <%= form.date_field :date %>
  </div>

  <%= form.submit 'Create Post' %>
<% end %>

<%= link_to 'Back', @location %>
